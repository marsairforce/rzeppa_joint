# 20260220
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[*.{md,txt}]
indent_size = 2

# 4 space indentation
[*.py]
indent_size = 4

[*.{scad,json}]
indent_style = space
indent_size = 2

[*.{toml,yml,yaml}]
indent_size = 2
